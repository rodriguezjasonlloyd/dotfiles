{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "html": {
    "formatter": {
      "enabled": true,
      "indentWidth": 4
    }
  },
  "javascript": {
    "formatter": {
      "indentWidth": 4
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnknownTypeSelector": "off"
      }
    }
  }
}
