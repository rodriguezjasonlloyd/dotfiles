{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "hecate",
  "version": "0.0.0",
  "widgets": [
    {
      "name": "status-bar",
      "htmlPath": "./index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["*.html", "*.css", "*.js"],
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": { "type": "all" },
          "dockToEdge": { "enabled": true }
        }
      ]
    }
  ]
}
